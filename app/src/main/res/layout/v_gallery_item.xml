<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gallery_item_size"
    android:layout_height="@dimen/gallery_item_size"
    android:padding="@dimen/gallery_item_margins">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/ic_download"
        android:layout_width="@dimen/gallery_download_icon_size"
        android:layout_height="@dimen/gallery_download_icon_size"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/gallery_download_icon_padding"
        android:src="@android:drawable/stat_sys_download"
        android:background="#33000000"/>
</RelativeLayout>